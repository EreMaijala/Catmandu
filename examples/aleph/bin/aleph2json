#!/bin/bash

if [ "$1" == "" ]; then
 echo "usage: $0 file"
 exit 1
fi

if [ "$2" == "" ]; then
  COUNT=-1
else
  COUNT=$2
fi

if [ "$3" == "" ]; then
  SKIP=0
else
  SKIP=$3
fi

#PERL="/usr/bin/perl -d:NYTProf"
PERL="/usr/bin/perl"
CATMANDU=${HOME}/Dev/perl/Catmandu
PROJ=${CATMANDU}/examples/aleph

cd ${PROJ}

${PERL} ${CATMANDU}/bin/catmandu convert \
     -I Aleph -i map=./data/aleph.map -i count=$COUNT -i skip=$SKIP \
     --fix=./data/aleph.fix \
     --pretty $1
