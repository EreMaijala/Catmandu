#!/bin/bash

PERL="perl"

if [ "${CATMANDU_HOME}" == "" ]; then
    CATMANDU_HOME="../.."
fi

if [ "${ALEPH_HOME}" == "" ]; then
    ALEPH_HOME=${CATMANDU_HOME}/examples/aleph
fi

PROJ=${ALEPH_HOME}

${PERL} ${CATMANDU}/bin/catmandu index -v \
     -T Solr -t id_field=fSYS \
     --fix=${PROJ}/data/index.fix \
     -s path=${PROJ}/data/aleph.db 
