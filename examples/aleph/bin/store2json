#!/bin/bash

PERL="perl"

if [ "${CATMANDU_HOME}" == "" ]; then
    CATMANDU_HOME="../.."
fi

if [ "${ALEPH_HOME}" == "" ]; then
    ALEPH_HOME=${CATMANDU_HOME}/examples/aleph
fi

PROJ=${ALEPH_HOME}


if [ "$1" == "" ]; then
  ${PERL} ${CATMANDU_HOME}/bin/catmandu export \
     --pretty \
     -s path=${PROJ}/data/aleph.db 
else
  ${PERL} ${CATMANDU_HOME}/bin/catmandu export \
     --pretty -l $1 \
     -s path=${PROJ}/data/aleph.db 
fi
