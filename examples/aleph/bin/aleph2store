#!/bin/bash

if [ "$1" == "" ]; then
 echo "usage: $0 file"
 exit 1
fi

PERL="perl"

if [ "${CATMANDU_HOME}" == "" ]; then
    CATMANDU_HOME="../.."
fi

if [ "${ALEPH_HOME}" == "" ]; then
    ALEPH_HOME=${CATMANDU_HOME}/examples/aleph
fi

PROJ=${ALEPH_HOME}

${PERL} ${CATMANDU_HOME}/bin/catmandu import \
     -v \
     -I Aleph -i map=${PROJ}/data/aleph.map \
     --fix=${PROJ}/data/aleph.fix \
     -s path=${PROJ}/data/aleph.db $1
